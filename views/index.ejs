<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Contact Manager</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- Bootstrap CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
 
   <style>
    body {
      background-color: #f1f3f6;
    }
    .container {
      max-width: 600px;
      margin-top: 40px;
    }
    .card {
      margin-bottom: 20px;
    }
    .fab {
      position: fixed;
      right: 20px;
      bottom: 20px;
      border-radius: 50%;
      padding: 15px 20px;
      background-color: #007bff;
      color: white;
      font-size: 24px;
      text-decoration: none;
    }
    .fab:hover {
      background-color: #0056b3;
    }
    .contact-name {
      font-weight: bold;
      font-size: 18px;
    }
    .contact-phone {
      color: gray;
    }
  </style>
</head>
<body>
<h1> <%=text %> </h1>
<div class="container mt-4">
  <h2 class="text-center mb-4">üìá My Contacts</h2>

  <% if (contacts.length === 0) { %>
    <div class="alert alert-info text-center">
      No contacts yet. <a href="/add" class="text-decoration-none">Add one now!</a>
    </div>
  <% } %>

  <% contacts.forEach((contact, index) => { %>
    <div class="card shadow-sm mb-3">
    <div class="card-body d-flex justify-content-between align-items-center">
      <div>
        <div><strong><%= contact.FirstName %> <%= contact.LastName %></strong></div>
        <div>üìû <%= contact.Phone %></div>
        <!-- <div>‚úâÔ∏è <%= contact.email %></div> -->
      </div>
      <div class="text-end">
        <!-- 3 dots button -->
        <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#detailsModal<%=index %>">
          &#8942;
        </button>
        <a href="/edit/<%= contact._id %>" class="btn btn-sm btn-primary">Edit</a>
        <form action="/delete/<%= contact._id %>?_method=DELETE" method="GET" onclick="return confirm('Are you sure you want to delete this contact?')" style="display:inline;">
          <button type="submit" class="btn btn-sm btn-outline-danger" >Delete</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal for viewing contact details -->
  <div class="modal fade" id="detailsModal<%= index %>" tabindex="-1" aria-labelledby="detailsModalLabel<%= index %>" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="detailsModalLabel<%= index %>">Contact Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p><strong>First Name:</strong> <%= contact.FirstName %></p>
          <p><strong>Last Name:</strong> <%= contact.LastName %></p>
          <p><strong>Email:</strong> <%= contact.Email %></p>
          <p><strong>Phone:</strong> <%= contact.Phone %></p>
          <p><strong>Address:</strong> <%= contact.Address %></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <% }); %>
</div>

<!-- Floating Action Button -->
<a href="/add" class="btn btn-primary rounded-circle fab">
  ‚ûï
</a>

<!-- Bootstrap Icons CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</body>
</html>
