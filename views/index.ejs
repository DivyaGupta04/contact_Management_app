<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Contact Manager</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .contact-card {
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.05);
      margin-bottom: 15px;
      transition: 0.3s;
    }
    .contact-card:hover {
      background-color: #f1f1f1;
    }
    .fab {
      position: fixed;
      bottom: 20px;
      right: 20px;
      font-size: 24px;
    }
  </style>
</head>
<body>
<h1> <%=text %> </h1>
<div class="container mt-4">
  <h2 class="text-center mb-4">ðŸ“‡ My Contacts</h2>

  <% if (contacts.length === 0) { %>
    <div class="alert alert-info text-center">
      No contacts yet. <a href="/add" class="text-decoration-none">Add one now!</a>
    </div>
  <% } %>

  <% contacts.forEach(contact => { %>
    <div class="card contact-card">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h5 class="card-title mb-1"><%= contact.firstName %> <%= contact.lastName %></h5>
          <p class="mb-0 text-muted"><i class="bi bi-telephone"></i> <%= contact.phone %></p>
          <p class="mb-0 text-muted"><i class="bi bi-envelope"></i> <%= contact.email %></p>
        </div>
        <div>
          <a href="/edit/<%= contact._id %>" class="btn btn-sm btn-outline-primary">Edit</a>
          <form action="/delete/<%= contact._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure?')">Delete</button>
          </form>
        </div>
      </div>
    </div>
  <% }); %>
</div>

<!-- Floating Action Button -->
<a href="/add" class="btn btn-primary rounded-circle fab">
  âž•
</a>

<!-- Bootstrap Icons CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</body>
</html>
